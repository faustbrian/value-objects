{
  "name": "cline/value-objects",
  "description": "Type-safe value objects for Laravel applications",
  "license": "MIT",
  "keywords": [
    "laravel",
    "value-objects",
    "ddd",
    "domain-driven-design",
    "type-safety",
    "immutable",
    "php"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "brick/math": "^0.14.1",
    "brick/money": "^0.10.3",
    "brick/phonenumber": "^0.8.0",
    "brick/postcode": "^0.5.0",
    "cline/data": "^1.0.1",
    "cline/enums": "^1.0.1",
    "cline/intl": "^1.2",
    "spatie/laravel-data": "^4.18.0",
    "spatie/laravel-package-tools": "^1.92.7",
    "spatie/regex": "^3.1.1",
    "symfony/intl": "^7.4.0"
  },
  "require-dev": {
    "cline/coding-standard": "^1.5.7",
    "ergebnis/composer-normalize": "^2.49@dev",
    "orchestra/testbench": "^10.8",
    "pestphp/pest": "^4.1.6",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^7.4.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\ValueObjects\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
