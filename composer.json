{
    "name": "cline/value-objects",
    "description": "Type-safe value objects for Laravel applications",
    "license": "MIT",
    "keywords": [
        "laravel",
        "value-objects",
        "ddd",
        "domain-driven-design",
        "type-safety",
        "immutable",
        "php"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.4.0",
        "brick/math": "^0.14.0",
        "brick/money": "^0.10.3",
        "brick/phonenumber": "^0.8.0",
        "brick/postcode": "^0.5.0",
        "cline/data": "^1.0.1",
        "cline/enums": "^1.0",
        "cline/intl": "^1.0",
        "spatie/laravel-data": "^4.18.0",
        "spatie/laravel-package-tools": "^1.92.7",
        "spatie/regex": "^3.1.1",
        "symfony/intl": "^7.3.4"
    },
    "require-dev": {
        "cline/php-cs-fixer": "^1.0.4",
        "driftingly/rector-laravel": "^2.1.0",
        "ergebnis/composer-normalize": "^2.49@dev",
        "laravel/pint": "^1.25.1",
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^3.8.4",
        "pestphp/pest-plugin-laravel": "^3.2",
        "pestphp/pest-plugin-type-coverage": "^3.6.1",
        "phpstan/phpstan": "^2.1.31",
        "rector/rector": "^2.2.3",
        "symfony/var-dumper": "^7.3.4"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cline\\ValueObjects\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix",
        "refactor": "rector",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "test:lint": "vendor/bin/php-cs-fixer check --diff",
        "test:refactor": "rector --dry-run",
        "test:type-coverage": "pest --parallel --exactly=100 --type-coverage",
        "test:types": "phpstan",
        "test:unit": "pest --parallel --exactly=100 --coverage"
    }
}
